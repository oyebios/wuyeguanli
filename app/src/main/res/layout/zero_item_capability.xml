<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_box_logo"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/tv_box_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/iv_box_logo"
        android:text="#6" />
    <TextView
        android:id="@+id/tv_box_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_box_logo"
        android:layout_below="@+id/tv_box_type"
        android:text="30cm*30cm*24cm"
        />

    <test.cn.sjz.testproject.ui.ui.RadioGroupLayout
        android:id="@+id/rg_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf= "@+id/iv_box_logo"
        android:layout_below="@+id/tv_box_size"
        android:layout_alignBottom="@+id/iv_box_logo">
    </test.cn.sjz.testproject.ui.ui.RadioGroupLayout>
</RelativeLayout>