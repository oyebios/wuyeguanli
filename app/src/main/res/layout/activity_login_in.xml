<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_blue_bg">

    <TextView
        android:id="@+id/tv_username_label"
        android:text="用户名："
        android:textColor="@color/black"
        android:layout_width="60dp"
        android:gravity="center_vertical"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"/>
    <EditText
        android:id="@+id/et_username"
        android:layout_toRightOf="@+id/tv_username_label"
        android:layout_width="150dp"
        android:layout_alignTop="@+id/tv_username_label"
        android:singleLine="true"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_pwd_label"
        android:layout_below="@+id/et_username"
        android:layout_marginTop="20dp"
        android:text="密码："
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_width="60dp"
        android:layout_height="40dp" />
    <EditText
        android:id="@+id/et_pwd"
        android:layout_toRightOf="@+id/tv_pwd_label"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:singleLine="true"
        android:layout_alignTop="@+id/tv_pwd_label"/>

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:textColor="@color/gray_blue"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_btn_normal"
        android:gravity="center"
        android:text="登录"
        android:layout_below="@+id/et_pwd"
        android:layout_marginTop="30dp"/>
</RelativeLayout>